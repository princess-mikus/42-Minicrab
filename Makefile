#export ASCII_SMALL


$(NAME): $(OBJS) $(LIBFT)
	@clear
	@printf "\033[0;32;3mLIBFT\t\t\033[0;32;0mâœ…\n"
	@sleep 0.2;
	@printf "\033[0;32;3mMINISHELL\t\033[0;32;0mâœ…\033[0;32;3m\n\n"
	@if	[ $(shell tput cols) -lt 58 ]; then \
    printf "\
$(CYAN)â–ˆâ–ˆ$(PINK)â–ˆâ–ˆ$(WHITE)â–ˆâ–ˆ$(PINK)â–ˆâ–ˆ$(CYAN)â–ˆâ–ˆ\n\
$(CYANB)ðŸ¦€$(PINKB)ðŸ¦€$(WHITEB)ðŸ¦€$(PINKB)ðŸ¦€$(CYANB)ðŸ¦€\n\
$(CYAN)â–ˆâ–ˆ$(PINK)â–ˆâ–ˆ$(WHITE)â–ˆâ–ˆ$(PINK)â–ˆâ–ˆ$(CYAN)â–ˆâ–ˆ$(END)\n"; \
  elif	[ $(shell tput cols) -lt 122 ]; then \
		printf "$$ASCII_SMALL"; \
	else \
		printf "$$ASCII_LONG"; \
	fi
	@$(CC) $(CFLAGS) $(RLINE) $(OBJS) $(LIBFT) $(RLINE_FLAGS) -o $(NAME)
#@printf "$(RED)"

#ifeq ($(USER), $(filter $(USER), xortega))
